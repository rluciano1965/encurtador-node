<%- include("_header") -%>

<h3>Lista de endereços web (<%= model.length %>)</h3>

<form action="">

  <input type="text" name="data_inclusao">
  <button type="submit">Buscar por data de inclusao</button>

</form>

<br>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>URL original</th>
        <th>URL encurtada</th>
        <th>Data inclusão</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Nova URL</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const urldata of model) { %>
        <tr>
          <td><%= urldata.original %></td>
          <td><%= urldata.encurtada %></td>
          <td><%= urldata.data_inclusao %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/<%= urldata.id %>">Editar</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= urldata.id %>">Excluir</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>